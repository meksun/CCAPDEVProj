<!DOCTYPE html>
<html>
	<%- include('../partials/head.ejs')  %>
	<%- include('../partials/cart.ejs')  %>
<body>

	<div id = "cartitems">
<table>
	<tr>
		<th><label>Picture of Product</label></th>
		<th><label>Item Name</label></th>
		<th><label>Quantity</label></th>
		<th><label>Price Per Item</label></th>
		<th><label>Total Item Price</label></th>
	</tr>
	<% if(items)items.forEach(item=>{%>
	<tr>
		
			<td><a href = "/Product/<%=item.slug%>"><img src="/uploads/images/<%=item.img%>"></a></td>
			<td id><%=item.title%></td>
			<td>x<%=item.quantity%></td>
			<td>$<%=item.price%></td>
		<td>$<%=item.totalcost%></td>
		
		<td><button> <a href = "cart/<%=item.slug%>/delete"> DELETE</a></button></td>
			
		
	</tr>
	<%})%>

  	
</table>

<h3 id = "total">TOTAL :$<%=total%></h3>
<br>
<br>
<button id ="back"><a href="javascript:history.back()">BACK</a></button>
<button id="addItem"><a href="/Product">ADD ITEM</a></button>
<button id="checkout"><a href = "/checkout">CHECKOUT</a></button>
</div><br><br><br><br><br><br><br><br>
<%- include('../partials/footer.ejs')  %>
<%- include('../partials/nav.ejs')  %>
</body>
</html>