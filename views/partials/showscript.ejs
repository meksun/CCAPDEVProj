<script>
     const form = document.getElementById('addtocart')
			form.addEventListener('submit', addCart)

			async function addCart(event) {
				event.preventDefault()
                
                const title = "<%=add.title%>"
				console.log(title)

				const result = await fetch('/Product/<%=add.slug%>/addtocart', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
                       title,
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everythign went fine
					alert('Success')
                    
				} else {
					alert(result.error)
				}
			}
</script>